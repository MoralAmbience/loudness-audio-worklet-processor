{
  "image": "node:latest",
  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "bradlc.vscode-tailwindcss"],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        }
      }
    }
  }
}
